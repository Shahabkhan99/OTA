TIME=`grep ro.modversion $OUT/*/build.prop | cut -d'=' -f2`

OTA=${OTA_TYPE,,}
TITLE=$DEVICE\_$OTA

XENONHD_TARGET_PACKAGE=$VERSION-$DEVICE.zip

# Create OTA XML file
if [ -f $OTA_DIR/ota_conf ] &>/dev/null; then

cat >$OUT/ota_$TITLE.xml <<EOF
